rorange: '#d06030'
uorange: '#e08030'
ugold: '#c0a030'
dyellow: '#d0b030'
uyellow: '#d0d030'
gyellow: '#b0c020'
ygreen: '#90c030'
dgreen: '#00a000'
ugreen: '#30c030'
